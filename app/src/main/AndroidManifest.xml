<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.roadsideassistance">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".AssistantPriceSettings" />
        <activity android:name=".AssistantAccountSettings" />
        <activity android:name=".AssistantPaymentReport" />
        <activity android:name=".AssistantPaymentHistory" />
        <activity android:name=".AssistantDetails" />
        <activity android:name=".AssistantAccount" />
        <activity android:name=".CurrentJob" />
        <activity android:name=".AvailableJobSelection" />
        <activity android:name=".AvailableJobs" />
        <activity
            android:name=".AddCar"
            android:label="@string/title_activity_add_car"
            android:theme="@style/NoActionBar" />
        <activity android:name=".UpdateBilling" />
        <activity android:name=".UpdateSubscription" />
        <activity android:name=".ManageCars" />
        <activity android:name=".CustomerAccount" />
        <activity android:name=".AssistantHome" />
        <activity android:name=".ManagerHome" />
        <activity android:name=".CustomerHome" />
        <activity
            android:name=".register"
            android:label="Register"
            android:parentActivityName=".SignIn" />
        <activity
            android:name=".registerAddress"
            android:label="Register Address"
            android:parentActivityName=".register" />
        <activity
            android:name=".registerBankAccount"
            android:label="Register Bank Account"
            android:parentActivityName=".registerAddress" />
        <activity android:name=".SignIn">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>